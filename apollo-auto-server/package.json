{
  "name": "apollo-auto-server",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon ./src/index.ts",
    "db:dev": "prisma migrate dev --schema ./src/prisma/schema.prisma",
    "db:generate": "prisma generate --schema ./src/prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema ./src/prisma/schema.prisma",
    "start": "NODE_ENV=production yarn db:deploy && ts-node --files -r tsconfig-paths/register ./src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "6.17.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
