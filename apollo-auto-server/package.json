    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "node-schedule": "^2.1.1",
    "prisma": "^6.17.1",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10"
  }
}
